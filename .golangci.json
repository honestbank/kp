{
    "_ignore": "DO NOT MODIFY THIS FILE: https://github.com/honestbank/.github/blob/main/docs/about.md",
    "run": {
        "skip-files": [
            "graph"
        ],
        "skip-dirs": [
            ".*/generated/*"
        ],
        "skip-dirs-use-default": true,
        "tests": true
    },
    "issues":  {
        "exclude-rules": {
            "path": "_test.go",
            "linters": ["errcheck"]
        }
    },
    "linters": {
        "enable": [
            "asciicheck",
            "errcheck",
            "exhaustive",
            "exportloopref",
            "forbidigo",
            "gocyclo",
            "gofmt",
            "goimports",
            "gosimple",
            "govet",
            "ineffassign",
            "makezero",
            "misspell",
            "nakedret",
            "nestif",
            "nilerr",
            "nlreturn",
            "nolintlint",
            "staticcheck",
            "testpackage",
            "typecheck",
            "unconvert",
            "unused",
            "wastedassign",
            "whitespace"
        ]
    },
    "linters-settings": {
        "errcheck": {
            "check-blank": true
        }
    }
}
